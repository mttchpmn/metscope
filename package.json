{
  "name": "metscope",
  "version": "1.0.0",
  "description": "Express API for Metscope Weather Platform",
  "main": "app.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --timeout 10000",
    "start:dev": "docker-compose down; docker-compose -f docker-compose.yml up --detach; npm run db:migrate",
    "start:prod": "docker stop METSCOPE-PROD-API && docker rm METSCOPE-PROD-API; docker build -t prod-api -f Dockerfile.prod .; docker-compose run --detach --service-ports --name METSCOPE-PROD-API api",
    "shell": "docker exec -it METSCOPE-DEV-API /bin/sh",
    "db:console": "psql postgres://metscope:password@localhost:5433/metscope",
    "db:migrate": "docker exec METSCOPE-DEV-API ./node_modules/.bin/sequelize db:migrate",
    "purge-logs": "sudo sh -c 'truncate -s 0 /var/lib/docker/containers/*/*-json.log'"
  },
  "author": "Matt Chapman",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "axios": "^0.19.0",
    "axios-retry": "^3.1.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.3",
    "connect-redis": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "generic-pool": "^3.7.1",
    "htmltidy2": "^0.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "pg": "^7.11.0",
    "promise.allsettled": "^1.0.1",
    "puppeteer": "^2.0.0",
    "redis": "^2.8.0",
    "sequelize": "^5.21.0",
    "serve-index": "^1.9.1",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1",
    "winston-loggly-bulk": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.1.4",
    "sequelize-cli": "^5.5.0",
    "supertest": "^4.0.2"
  }
}
